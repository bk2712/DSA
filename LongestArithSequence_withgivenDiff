class Solution {
public:
    int longestSubsequence(vector<int>& nums, int diff) {
        int n= nums.size(),ans= 0;
        unordered_map<int,int> mp;
        for(int i=0;i<n;i++){
            int a= nums[i]- diff;
            int cnt =0;
            if(mp.find(a)!=mp.end()) cnt= mp[a];
            // mp[nums[i]]= cnt+1;
            ans= max(ans,cnt+1);
            mp[nums[i]]= cnt+1;

        }
        return ans;
    }
};
